<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/positionListItem_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="priorityPosition"
        android:layout_margin="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/positionListItem_testData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test_data"
        android:layout_margin="20dp"
        android:textSize="18dp"

        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/positionListItem_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="latitude"
        android:layout_marginStart="20dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/positionListItem_priority"
       app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/positionListItem_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="longitude"
        android:layout_marginStart="20dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/positionListItem_latitude"
        app:layout_constraintTop_toBottomOf="@+id/positionListItem_priority"
        />

</androidx.constraintlayout.widget.ConstraintLayout>